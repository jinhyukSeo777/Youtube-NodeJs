{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/db.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/middlewares.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/client/**",
      "use": "@vercel/static"
    },
    {
      "src": "src/controllers/**",
      "use": "@vercel/static"
    },
    {
      "src": "src/models/**",
      "use": "@vercel/static"
    },
    {
      "src": "src/routers/**",
      "use": "@vercel/static"
    },
    {
      "src": "src/views/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/server.js"
    }
  ]
}
