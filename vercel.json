{
  "version": 2,
  "builds": [
    {
      "src": "src/**",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["build/**/*"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "build/server.js"
    }
  ],
  "scripts": {
    "build": "npm run build"
  }
}
