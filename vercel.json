{
  "version": 2,
  "builds": [
    {
      "src": "build/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/db.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/middlewares.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/client/**",
      "use": "@vercel/static"
    },
    {
      "src": "build/controllers/**",
      "use": "@vercel/static"
    },
    {
      "src": "build/models/**",
      "use": "@vercel/static"
    },
    {
      "src": "build/routers/**",
      "use": "@vercel/static"
    },
    {
      "src": "build/views/**",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "build/server.js"
    }
  ]
}
